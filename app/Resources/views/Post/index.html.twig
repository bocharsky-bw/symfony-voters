{% extends 'base.html.twig' %}

{% block body %}
    <h1>All Posts!</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>&nbsp;</th>
            </tr>
        </thead>

        <tbody>
            {% for post in posts %}
                <tr>
                    <td>
                        {{ post.title }}
                    </td>
                    <td>
                        {{ post.authorUsername }}
                    </td>
                    <td>
                        <a href="{{ path('post_edit', {'id': post.id}) }}">Edit</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
