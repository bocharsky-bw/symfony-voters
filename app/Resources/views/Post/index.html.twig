{% extends 'base.html.twig' %}

{% block body %}
    <h1>All Posts!</h1>

    <table class="table">
        <tbody>
            {% for post in posts %}
                <tr>
                    <td>
                        {{ post.title }}
                    </td>
                    <td>
                        <a href="{{ path('post_edit', {'id': post.id}) }}">Edit</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
